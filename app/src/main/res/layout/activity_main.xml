<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etBuscar"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:text="Buscador"
        app:layout_constraintBottom_toTopOf="@+id/rvPeliculas"
        app:layout_constraintEnd_toEndOf="@+id/rvPeliculas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rvPeliculas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="89dp"
        android:layout_height="50dp"
        android:text="🔍"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/etBuscar"
        app:layout_constraintEnd_toEndOf="@+id/rvPeliculas"
        app:layout_constraintTop_toTopOf="@+id/etBuscar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPeliculas"
        android:layout_width="320dp"
        android:layout_height="302dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:text="Peliculas"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/rvPeliculas"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/rvPeliculas"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>